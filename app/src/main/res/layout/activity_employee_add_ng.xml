<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".User_SendProblem_Ng">

    <EditText
        android:id="@+id/value1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:animateLayoutChanges="true"/>

    <EditText
        android:id="@+id/value2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="description_txt"
        android:animateLayoutChanges="true"/>

    <EditText
        android:id="@+id/value3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="day"
        android:animateLayoutChanges="true"/>

    <EditText
        android:id="@+id/value4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="month"
        android:animateLayoutChanges="true"/>

    <EditText
        android:id="@+id/value6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="year"
        android:animateLayoutChanges="true"/>

    <EditText
        android:id="@+id/value5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Status"
        android:animateLayoutChanges="true"/>

    <EditText
        android:id="@+id/value7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company"
        android:animateLayoutChanges="true"/>

    <EditText
        android:id="@+id/value8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="FullName"
        android:animateLayoutChanges="true"/>

    <ImageButton
        android:id="@+id/submit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/imgupdate"
        android:text="Update php"
        />
</LinearLayout>