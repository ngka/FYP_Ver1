<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OCR_Ng">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="410dp"
            android:layout_height="302dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:elevation="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:text="Your Image would be here"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </FrameLayout>

        <Button
            android:id="@+id/btnImage"
            android:layout_width="74dp"
            android:layout_height="64dp"
            android:background="@drawable/ic_baseline_insert_link_24" />

        <TextView
            android:id="@+id/recognized_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:padding="10dp"
            android:text="text" />

        <TextView
            android:id="@+id/translated_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translated Text will be here"
            android:background="@drawable/textview_border"
            android:padding="10dp"
            android:textSize="16sp" />
        <ImageButton
            android:id="@+id/TCNN"
            android:layout_width="116dp"
            android:layout_height="49dp"
            android:background="@drawable/back" />

    </LinearLayout>

</ScrollView>
